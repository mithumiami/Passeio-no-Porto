<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="offset-md-2 col-md-8 col-sm-12">
      <h4 class="my-3 ml-3"><%= @user.last_name %><%= @user.first_name %>'s Information</h4>

          <table class = "table">

              <tr>
              <td>User ID</td>
              <td><div><%= @user.id %></div></td>
              </tr>

              <tr>
                <td>Name</td>
                <td><div><%= @user.last_name %><%= @user.first_name %></div></td>
              </tr>


              <tr>
                <td>Account Name</td>
                <td><div><%= @user.account %></div></td>
              </tr>

              <tr>
                <td>Telephone number</td>
                <td><div><%= @user.telephone_number %></div></td>
              </tr>

              <tr>
                <td>Email</td>
                <td><div><%= @user.email %></div></td>
              </tr>

              <tr>
                <td>Status</td>
                <td><div><%= @user.is_active ? '有効' : '退会' %> </div></td>
              </tr>

          </table>

          <%= link_to "Edit",  edit_admin_user_path(@user.id), class: 'btn btn-outline-success'  %>
          <%#= link_to "Top Page", admin_top_path, class:'btn btn-primary' %>

      </div>
    </div>
  </div>
