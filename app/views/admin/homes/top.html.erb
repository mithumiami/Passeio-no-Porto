<p id="notice"></p>
<div class="container">

      <h4 class= "text-center my-4">Admin Top Page</h4>

      <p class= "text-center my-4">Select the item you want to manage from the header.</p>

      <h5 class= "text-center my-4">Current Post INDEX</h5>

      <div class= "row my-4">
        <% @posts.each do |post| %>
          <div class="col-md-3">
            <div class="product-item">
              <section class>
  
                  <%= attachment_image_tag post, :image, :fill, 200, 150, format: 'jpeg', fallback: "noimage.png" %>
                <div><%= post.title %></div>
                <div><%= post.user.account %></div>
  
              </section>
            </div>
          </div>
        <% end %>
      </div>
</div>
