<p id="notice"></p>
<div class="container">

        <h3 class="my-4"><%= @post.title %></h3>
        <div class= "row my-4">
          <div class= "col-md-6">
                <%= attachment_image_tag @post, :image, :fill, 400, 300, format: 'jpeg', fallback: "noimage.png" %>
          </div>

          <div class= "col-md-6">
           <p><%= @post.user.account %>
           <p><%= @post.body %></p>
           <p><%= @post.created_at.strftime('%Y/%m/%d') %></p>
              <%= link_to "Destroy", admin_post_path(@post), method: :delete, data: { confirm: 'Are you sure you want to delete?'}, class: 'btn btn-outline-danger' %>
              <%= link_to "Edit", edit_admin_post_path(@post.id), class: 'btn btn-outline-success' %>
          </div>
        </div>
</div>

