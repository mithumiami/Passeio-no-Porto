<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      
      <div class="search-form">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <%= f.text_field :keyword, value: @keyword %>
          <%= f.submit "検索" %>
        <% end %>
      </div>

      <h4 class="my-3 ml-3">Posts</h4>

         <div class= "my-3 ml-3 text-center">
          <div class><%= link_to "New Post", new_post_path, class: 'btn btn-outline-dark ' %></div>
        </div>
    </div>

        <% @posts.each do |post| %>
        <div class="col-md-3">
          <div class="product-item">
            <section class="product-text">
              <%= link_to post_path(post.id) do %>
                <%= attachment_image_tag post, :image, :fill, 200, 150, format: 'jpeg', fallback: "noimage.png" %>
              <% end %>
              <div><%#= post.user.account %></div>
              <div><%= post.title %></div>

            </section>

          </div>
        </div>



        <% end %>


      </div>

  </div>