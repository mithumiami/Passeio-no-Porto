<body>
    <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 mx-auto">

          <h3>Bem Vindo ao Porto!!</h3>

          <ul class="bxslider">
          	<li><img src="Porto1.jpg" width="640" height="300"></li>
          	<li><img src="Porto2.jpg" width="640" height="300"></li>
          	<li><img src="Porto3.jpg" width="640" height="300"></li>
          	<li><img src="Porto4.jpg" width="640" height="300"></li>
          </ul>

          <h4 class="my-3 ml-3">Posts</h4>


        </div>

            <% @posts.each do |post| %>
            <div class="col-md-3">
              <div class="product-item">
                <section class="product-text">

                    <%= attachment_image_tag post, :image, :fill, 200, 150, format: 'jpeg', fallback: "noimage.png" %>

                  <div><%= post.user.account %></div>
                  <div><%= post.title %></div>

                </section>
              </div>
            </div>
            <% end %>
          </div>
      </div>
  </body>